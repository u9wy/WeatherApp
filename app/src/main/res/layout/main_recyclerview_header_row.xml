<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_bottom_margin"
        android:layout_marginStart="@dimen/default_material_margin"
        android:layout_marginTop="@dimen/default_material_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4a79b6"
        tools:text="Monday" />

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/default_material_margin"
        android:background="#78969494" />

</LinearLayout>